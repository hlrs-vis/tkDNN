# this is /lib/systemd/system/tkdnn.service

[Unit]
Description=tkdnn server daemon
Documentation=https://github.com/tobst/tkdnn
After=syslog.target

[Service]
# see man systemd.service 
Restart=on-failure
RestartSec=5s 
ExecStart=/usr/local/src/git/tkDNN/tkdnn-start-brio.sh
ExecStop=/usr/local/src/git/tkDNN/tkdnn-stop.sh

[Install]
WantedBy=multi-user.target 
